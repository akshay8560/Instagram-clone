<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="akshay.kumar.instalite">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_instalite_black"
        android:label="@string/app_name"
        android:roundIcon="@drawable/insta_photo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Instagram">
        <activity
            android:name="akshay.kumar.instalite.SecondActivity"
            android:exported="true" />
        <activity android:name=".Messages.MessageActivity"
            android:parentActivityName=".Messages.ChatActivity"></activity>
        <activity
            android:name=".Messages.ChatActivity"
            android:parentActivityName=".Messages.ChatActivity" />
        <activity android:name="akshay.kumar.instalite.StoryActivity" />
        <activity android:name="akshay.kumar.instalite.AddStoryActivity" />
        <activity android:name="akshay.kumar.instalite.OptionsActivity" />
        <activity android:name="akshay.kumar.instalite.FollowersActivity" />
        <activity android:name="akshay.kumar.instalite.EditProfileActivity" />
        <activity android:name="akshay.kumar.instalite.CommentActivity" />
        <activity android:name="akshay.kumar.instalite.PostActivity" />
        <activity android:name="akshay.kumar.instalite.MainActivity" />
        <activity android:name="akshay.kumar.instalite.RegisterActivity" />
        <activity android:name="akshay.kumar.instalite.LoginActivity" />
        <activity android:name="akshay.kumar.instalite.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />



    </application>

</manifest>